# Telegram Bot Token and Admin IDs
# BOT_TOKEN - Telegram bot token
# ADMIN_IDS - List of Telegram user IDs who will have admin access to the bot
BOT_TOKEN=your_bot_token_here
ADMIN_IDS=[12345678]

# CLOUDFLARE_TUNNEL_TOKEN - Cloudflare Tunnel token for secure connections (for local development/testing)
CLOUDFLARE_TUNNEL_TOKEN=

# MTPROXY_LINK - MTProxy link for Telegram
MTPROXY_LINK=

# Database Connection Settings
# DATABASE_USER - Database username
# DATABASE_PASSWORD - Database password
# DATABASE_HOST - Database host address
# DATABASE_PORT - Database port
# DATABASE_NAME - Database name
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_HOST=klarvpn-shop-db
DATABASE_PORT=5432
DATABASE_NAME=postgres

# Redis
# REDIS_HOST - Redis host address
# REDIS_PORT - Redis port
REDIS_HOST=telegram-shop-redis
REDIS_PORT=6379

# Localization and Display
# DEFAULT_LANGUAGE - Default language for the bot (e.g., "ru" for Russian, "en" for English)
# DEFAULT_CURRENCY_SYMBOL - Default currency symbol (e.g., RUB, USD, EUR)
DEFAULT_LANGUAGE="ru"
DEFAULT_CURRENCY_SYMBOL="RUB"

# External Links
# SUPPORT_LINK - Link to the support chat
# TELEGRAM_CHANNEL_LINK - Link to the Telegram channel
# SERVER_STATUS_URL - Link to the server status page
# TERMS_OF_SERVICE_URL - Link to the terms of service
# SUBSCRIPTION_MINI_APP_URL - URL of the subscription mini-app
# START_COMMAND_DESCRIPTION - Description of the /start command
# DISABLE_WELCOME_MESSAGE - Disable the welcome message
# MY_DEVICES_SECTION_ENABLED - Enable the My Devices section in the subscription menu
# USER_HWID_DEVICE_LIMIT - Default HWID/device limit for panel users (0 = unlimited
SUPPORT_LINK=https://t.me/your_support_link
TELEGRAM_CHANNEL_LINK=https://t.me/your_channel
SERVER_STATUS_URL=https://status.yourdomain.tld/status/your_service
TERMS_OF_SERVICE_URL=https://example.com/tos
SUBSCRIPTION_MINI_APP_URL=
START_COMMAND_DESCRIPTION=
DISABLE_WELCOME_MESSAGE=
MY_DEVICES_SECTION_ENABLED=False
USER_HWID_DEVICE_LIMIT=0

# Required channel subscription
# REQUIRED_CHANNEL_ID - Telegram channel ID (e.g. -1001234567890) the user must join
# REQUIRED_CHANNEL_LINK - Optional: public link/invite button text opens
REQUIRED_CHANNEL_ID=
REQUIRED_CHANNEL_LINK=https://t.me/your_channel

# Webhook Base URL (used for Telegram and payment providers)
WEBHOOK_BASE_URL=https://webhooks.yourdomain.tld

# Payment Method Toggles
# YOOKASSA_ENABLED - Enable YooKassa payment method
# FREEKASSA_ENABLED - Enable FreeKassa payment method
# STARS_ENABLED - Enable STARS payment method
# TRIBUTE_ENABLED - Enable Tribute payment method
# CRYPTOPAY_ENABLED - Enable CryptoPay payment method
YOOKASSA_ENABLED=True
FREEKASSA_ENABLED=True
STARS_ENABLED=True
TRIBUTE_ENABLED=True
CRYPTOPAY_ENABLED=True

# YooKassa Payment Gateway Configuration
# YOOKASSA_SHOP_ID - Your store ID in YooKassa
# YOOKASSA_SECRET_KEY - Your secret
# YOOKASSA_RETURN_URL - URL to which the user will be returned after payment
# YOOKASSA_DEFAULT_RECEIPT_EMAIL - Default email for sending receipts
# YOOKASSA_VAT_CODE - VAT code
# YOOKASSA_AUTOPAYMENTS_ENABLED - Auto-renew toggle
# YOOKASSA_AUTOPAYMENTS_REQUIRE_CARD_BINDING - Force automatic card binding when
YOOKASSA_SHOP_ID=your_shop_id
YOOKASSA_SECRET_KEY=your_secret_key
YOOKASSA_RETURN_URL=https://t.me/your_bot
YOOKASSA_DEFAULT_RECEIPT_EMAIL=your_email@example.com
YOOKASSA_VAT_CODE=1
YOOKASSA_AUTOPAYMENTS_ENABLED=False
YOOKASSA_AUTOPAYMENTS_REQUIRE_CARD_BINDING=True

# FreeKassa Payment Gateway Configuration
# FREEKASSA_MERCHANT_ID - Your shop ID in FreeKassa
# FREEKASSA_API_KEY - API key for REST requests
# FREEKASSA_SECOND_SECRET - Secret word #2 (used to verify notifications)
# FREEKASSA_PAYMENT_IP - Public IP address reported to FreeKassa
# FREEKASSA_PAYMENT_METHOD_ID - Payment method ID, you can get it from https://merchant.freekassa.net/settings/currencies
FREEKASSA_MERCHANT_ID=your_shop_id
FREEKASSA_API_KEY=your_api_key
FREEKASSA_SECOND_SECRET=your_second_secret
FREEKASSA_PAYMENT_IP=
FREEKASSA_PAYMENT_METHOD_ID=44

# CryptoBot Payment Gateway Configuration
# CRYPTOPAY_TOKEN - API token for CryptoPay
# CRYPTOPAY_NETWORK - Network (mainnet or testnet)
# CRYPTOPAY_CURRENCY_TYPE - Currency type (fiat or crypto)
# CRYPTOPAY_ASSET - Asset, e.g., RUB, BTC, USDT
CRYPTOPAY_TOKEN=
CRYPTOPAY_NETWORK=mainnet
CRYPTOPAY_CURRENCY_TYPE=fiat
CRYPTOPAY_ASSET=RUB

# Tribute Payment Gateway Configuration
# TRIBUTE_API_KEY - API key for verifying Tribute webhook signatures
# TRIBUTE_SKIP_NOTIFICATIONS - Skip renewal notifications for Tribute payments
# TRIBUTE_SKIP_CANCELLATION_NOTIFICATIONS - Skip cancellation notifications for Tribute payments
TRIBUTE_API_KEY=
TRIBUTE_SKIP_NOTIFICATIONS=True
TRIBUTE_SKIP_CANCELLATION_NOTIFICATIONS=False

# Subscription Options. Specify cost parameters or payment links here.
1_MONTH_ENABLED=True
RUB_PRICE_1_MONTH=150
STARS_PRICE_1_MONTH=0
TRIBUTE_LINK_1_MONTH=

3_MONTHS_ENABLED=True
RUB_PRICE_3_MONTHS=300
STARS_PRICE_3_MONTHS=0
TRIBUTE_LINK_3_MONTHS=

6_MONTHS_ENABLED=True
RUB_PRICE_6_MONTHS=500
STARS_PRICE_6_MONTHS=0
TRIBUTE_LINK_6_MONTHS=

12_MONTHS_ENABLED=True
RUB_PRICE_12_MONTHS=900
STARS_PRICE_12_MONTHS=0
TRIBUTE_LINK_12_MONTHS=

# Subscription Notifications
# SUBSCRIPTION_NOTIFICATIONS_ENABLED - Enable subscription notifications
# SUBSCRIPTION_NOTIFY_ON_EXPIRE - Notify on subscription expiration
# SUBSCRIPTION_NOTIFY_AFTER_EXPIRE - Notify after expiration
# SUBSCRIPTION_NOTIFY_DAYS_BEFORE - Days before expiration to notify
SUBSCRIPTION_NOTIFICATIONS_ENABLED=True
SUBSCRIPTION_NOTIFY_ON_EXPIRE=True
SUBSCRIPTION_NOTIFY_AFTER_EXPIRE=True
SUBSCRIPTION_NOTIFY_DAYS_BEFORE=3

# Give a bonus only once per referee
REFERRAL_ONE_BONUS_PER_REFEREE=False

# Allow ref_<tg_id> links. Leave unset/true unless you want to disable old links
LEGACY_REFS=true

# Referral Bonus Days
# Bonus for the inviting user
REFERRAL_BONUS_DAYS_1_MONTH=3
REFERRAL_BONUS_DAYS_3_MONTHS=7
REFERRAL_BONUS_DAYS_6_MONTHS=15
REFERRAL_BONUS_DAYS_12_MONTHS=30

# Invited User Bonus
REFEREE_BONUS_DAYS_1_MONTH=1
REFEREE_BONUS_DAYS_3_MONTHS=3
REFEREE_BONUS_DAYS_6_MONTHS=7
REFEREE_BONUS_DAYS_12_MONTHS=15

# Panel API Configuration
# PANEL_API_URL - URL of the panel API
# PANEL_API_KEY - Panel API key
# PANEL_WEBHOOK_SECRET - secret used to verify panel webhook signatures
PANEL_API_URL=http://your_panel_api_url/api
PANEL_API_KEY=your_panel_api_key
PANEL_WEBHOOK_SECRET=

# User traffic limits (applied for all users)
# USER_TRAFFIC_LIMIT_GB - Traffic limit for users (0 unlimited)
# USER_TRAFFIC_STRATEGY - Traffic reset strategy (NO_RESET, WEEK, MONTH)
USER_TRAFFIC_LIMIT_GB=0
USER_TRAFFIC_STRATEGY="NO_RESET"

# Default Internal Squads for Users (Optional, comma-separated UUIDs)
USER_SQUAD_UUIDS=uuid1,uuid2,uuid3
# Default External Squad for Users
# Optional: UUID from Remnawave External Squads to auto-link new panel users
USER_EXTERNAL_SQUAD_UUID=

# Trial Settings
# TRIAL_ENABLED - Enable the trial period
# TRIAL_DURATION_DAYS - Duration of the trial period in days
# TRIAL_TRAFFIC_LIMIT_GB - Traffic limit for the trial period (0 = unlimited)
# TRIAL_TRAFFIC_STRATEGY - Traffic reset strategy for the trial period (NO_RESET
TRIAL_ENABLED=True
TRIAL_DURATION_DAYS=5
TRIAL_TRAFFIC_LIMIT_GB=0
TRIAL_TRAFFIC_STRATEGY="NO_RESET"

# Web Server Settings (for handling webhooks)
WEB_SERVER_HOST="0.0.0.0"
WEB_SERVER_PORT=8080

# Admin Panel Log Pagination
# Number of events in the log
LOGS_PAGE_SIZE=10

# Admin Logging Configuration
# LOG_CHAT_ID - Telegram chat/group ID for admin notifications
# LOG_THREAD_ID - Optional: Thread ID for supergroup messages
# LOG_NEW_USERS - Log new user registrations
# LOG_PAYMENTS - Log payments
# LOG_PROMO_ACTIVATIONS - Log promo code activations
# LOG_TRIAL_ACTIVATIONS - Log trial activations
# LOG_SUSPICIOUS_ACTIVITY - Log suspicious activity
LOG_CHAT_ID=-1001234567890
LOG_THREAD_ID=
LOG_NEW_USERS=True
LOG_PAYMENTS=True
LOG_PROMO_ACTIVATIONS=True
LOG_TRIAL_ACTIVATIONS=True
LOG_SUSPICIOUS_ACTIVITY=True

